@model IEnumerable<Business.Dto.Product.ProductBackofficeDTO>

<section class="product-backoffice">
    <div class="container">
        <h1>Product Management</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="header">
            <h2>Products</h2>
            <a class="btn-primary" asp-controller="ProductBackoffice" asp-action="AddProduct">Add New Product</a>
        </div>

        <div class="form-group">
            <label for="searchInput">Search for product (ID or Name):</label>
            <input type="text" id="searchInput" placeholder="Enter ID or Name">
        </div>
        
        <form>
            <div class="form-group">
                <label for="categoryFilter">Filter by category:</label>
                <select id="categoryFilter">
                    <option value="All">All</option>
                    <option value="Clothes">Clothes</option>
                    <option value="Shoes">Shoes</option>
                    <option value="Bags">Bags</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Jewelry">Jewelry</option>
                </select>
                <button type="submit">Update</button>
            </div>
        </form>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="productList">
                    @foreach (var product in Model)
                    {
                        <tr data-id="@product.ProductId" data-name="@product.Name" data-category="@product.Category.Name">
                            <td>@product.ProductId</td>
                            <td>@product.Name</td>
                            <td>@product.Category.Name</td>
                            <td>@product.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="btn-column">
                                <a asp-controller="Products" asp-action="ProductDetails" asp-route-id="@product.ProductId" class="btn-primary">View Product</a>
                                <a class="btn-info">Edit</a>
                                <a class="btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
